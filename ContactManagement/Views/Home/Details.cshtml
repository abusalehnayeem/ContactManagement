@model ContactManagement.Core.Entity.Contact

@{
    ViewBag.Title = "Details";
}

<section class="contact-body box-right visible">
    <div class="vbox">
        <!--will implement later!-->
        <nav class="navbar navbar-default">
                <div class="container-fluid data-read">
                    <div class="navbar-header">
                        <a href="@Url.Action("Index", "Home", new { id = Model.Id })" class="navbar-brand"><span class="glyphicon glyphicon-chevron-left"></span></a>
                        <span class="navbar-brand">@Html.DisplayFor(model => model.Name)</span>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Delete", "Home", new { id = Model.Id })"><span class="glyphicon glyphicon-remove-circle"></span> Delete</a></li>
                        <li><a href="@Url.Action("Edit", "Home", new { id = Model.Id })"><span class="glyphicon glyphicon-edit"></span> Edit</a></li>
                    </ul>
                </div>
            </nav>
        <div class="row-row">
            <div class="cell">
                <div class="cell-inner">
                    <div class="form-group">
                        <div class="data-read">
                            <p>@Html.DisplayFor(model => model.Name)</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="data-read">
                            <p>
                                @Html.DisplayFor(model => model.Phone)
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="data-read">
                            <p>
                                @Html.DisplayFor(model => model.Email)
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="data-read">
                            <div>@Html.DisplayFor(model => model.Company)</div>
                            <p class="text-muted">@Html.DisplayFor(model => model.Title)</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="data-read">
                            <div>@Html.DisplayFor(model => model.House)</div>
                            <div>@Html.DisplayFor(model => model.Street)</div>
                            <div>@Html.DisplayFor(model => model.City)</div>
                            <div>@Html.DisplayFor(model => model.ZipCode)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>